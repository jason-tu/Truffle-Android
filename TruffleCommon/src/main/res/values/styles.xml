<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/titanium</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="text">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="text.bold">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="text.italic">
        <item name="android:fontFamily">@font/lato_italic</item>
    </style>

    <style name="text.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text.18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text.22">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="text.28">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="text.34">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="text.72">
        <item name="android:textSize">72sp</item>
    </style>

</resources>
